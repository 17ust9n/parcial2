<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.parcial2">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Parcial2">

        <!-- LoginActivity (LAUNCHER) -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegisterActivity -->
        <activity
            android:name=".ui.login.RegisterActivity"
            android:exported="true" />

        <!-- MainActivity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />

        <!-- AcercaActivity -->
        <activity
            android:name=".ui.AcercaActivity"
            android:exported="true" />

        <!-- ListaPacientesActivity -->
        <activity
            android:name=".ui.paciente.ListaPacientesActivity"
            android:exported="true" />

        <!-- ListaMedicosActivity -->
        <activity
            android:name=".ui.medico.ListaMedicosActivity"
            android:exported="true" />

        <!-- ListaMedicamentosActivity -->
        <activity
            android:name=".ui.medicamento.ListaMedicamentosActivity"
            android:exported="true" />

        <!-- ListaTurnosActivity -->
        <activity
            android:name=".ui.turno.ListaTurnosActivity"
            android:exported="true" />

        <activity
            android:name=".ui.turno.NuevoTurnoActivity"
            android:exported="false" />

    </application>

</manifest>