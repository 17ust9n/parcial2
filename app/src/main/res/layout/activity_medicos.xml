<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/medicos_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@color/rojo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- CARD DEL MÉDICO CON FLECHAS Y BOTONES DE ACCIÓN -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- INFO DEL MÉDICO + FLECHAS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnAnterior"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_arrow_left"
                        android:contentDescription="Anterior"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/tvNombreMedico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del médico"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tvMatriculaMedico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matrícula: 0000"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/tvEspecialidadMedico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Especialidad"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"/>

                        <TextView
                            android:id="@+id/tvEmailMedico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnSiguiente"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Siguiente"/>
                </LinearLayout>

                <!-- BOTONES DE ACCIÓN UNO DEBAJO DEL OTRO CON COLORES -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <Button
                        android:id="@+id/btnAgregarMedico"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Agregar"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:textColor="@android:color/white"/>

                    <Button
                        android:id="@+id/btnModificarMedico"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Modificar"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@android:color/holo_orange_light"
                        android:textColor="@android:color/white"/>

                    <Button
                        android:id="@+id/btnEliminarMedico"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Eliminar"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:textColor="@android:color/white"/>

                    <Button
                        android:id="@+id/btnVolverMedicos"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Volver"
                        android:backgroundTint="@android:color/darker_gray"
                        android:textColor="@android:color/white"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
