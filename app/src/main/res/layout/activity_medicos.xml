<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/medicos_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@color/rojo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvInfoMedicos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información de cada médico:"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:paddingBottom="16dp"/>

                <!-- Info + Flechas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Flecha Anterior -->
                    <ImageButton
                        android:id="@+id/btnAnteriorMedico"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_flecha_izquierda"
                        android:contentDescription="Desplazar izquierda"
                        android:scaleType="fitCenter"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/tvNombreMedico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvMatriculaMedico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matrícula:"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvEspecialidadMedico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Especialidad:"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvEmailMedico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <!-- Flecha Siguiente -->
                    <ImageButton
                        android:id="@+id/btnSiguienteMedico"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_flecha_derecha"
                        android:contentDescription="Desplazar derecha"
                        android:scaleType="fitCenter"/>

                </LinearLayout>

                <!-- BOTONES ACCIÓN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <!-- Agregar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAgregarMedico"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Agregar"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/holo_green_dark"
                        app:icon="@drawable/ic_agregar"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"
                        android:layout_marginBottom="12dp"/>

                    <!-- Modificar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnModificarMedico"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Modificar"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/holo_orange_light"
                        app:icon="@drawable/ic_modificar"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"
                        android:layout_marginBottom="12dp"/>

                    <!-- Eliminar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEliminarMedico"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Eliminar"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/holo_red_dark"
                        app:icon="@drawable/ic_eliminar"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"
                        android:layout_marginBottom="12dp"/>

                    <!-- Volver -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVolverMedicos"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Volver"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/darker_gray"
                        app:icon="@drawable/ic_volver"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
