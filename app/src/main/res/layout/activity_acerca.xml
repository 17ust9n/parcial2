<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/acerca_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rojo"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TÍTULO DE LA PANTALLA -->
                <TextView
                    android:id="@+id/tvTituloAcerca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acerca de Nosotros"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <!-- Texto descriptivo de la empresa -->
                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nuestra empresa se dedica a ofrecer servicios médicos de calidad y confiables para todos nuestros pacientes. Nuestro compromiso es brindar atención profesional y cercana."
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Botón volver a MainActivity -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVolver"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Volver"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/darker_gray"
                    app:icon="@drawable/ic_volver"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconSize="32dp"
                    app:iconTint="@null"
                    android:layout_marginBottom="12dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
