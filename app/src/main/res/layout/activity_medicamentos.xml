<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/medicamentos_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@color/rojo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMedicamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvInfoMedicamentos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información de cada medicamento:"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:paddingBottom="16dp"/>

                <!-- Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnAnteriorMedicamento"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_arrow_left"
                        android:contentDescription="Anterior"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/tvNombreMedicamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvUsoMedicamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uso"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvLaboratorioMedicamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Laboratorio"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvDosisMedicamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dosis"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvEfectosMedicamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Efectos secundarios"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvFabricanteMedicamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fabricante"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvPrecioMedicamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Precio"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tvVencimientoMedicamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de vencimiento"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnSiguienteMedicamento"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_arrow_right"
                        android:contentDescription="Siguiente"/>
                </LinearLayout>

                <!-- BOTONES ACCIÓN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <!-- Agregar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAgregarMedicamento"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Agregar"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/holo_green_dark"
                        app:icon="@drawable/ic_agregar"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"
                        android:layout_marginBottom="12dp"/>

                    <!-- Modificar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnModificarMedicamento"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Modificar"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/holo_orange_light"
                        app:icon="@drawable/ic_modificar"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"
                        android:layout_marginBottom="12dp"/>

                    <!-- Eliminar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEliminarMedicamento"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Eliminar"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/holo_red_dark"
                        app:icon="@drawable/ic_eliminar"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"
                        android:layout_marginBottom="12dp"/>

                    <!-- Volver -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVolverMedicamentos"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Volver"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/darker_gray"
                        app:icon="@drawable/ic_volver"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
