<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/turnos_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@color/naranja">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTituloTurnos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gestión de Turnos"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnAnteriorTurno"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_previous_red"
                        android:contentDescription="Anterior"
                        android:scaleType="fitCenter"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/tvInfoMedico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Médico:"/>

                        <TextView
                            android:id="@+id/tvInfoPaciente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paciente:"/>

                        <TextView
                            android:id="@+id/tvInfoMedicamento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medicamento:"/>

                        <TextView
                            android:id="@+id/tvFechaHora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha y Hora:"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnSiguienteTurno"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_next_red"
                        android:contentDescription="Siguiente"
                        android:scaleType="fitCenter"/>
                </LinearLayout>

                <!-- BOTONES ACCIÓN CON ÍCONOS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <!-- Agregar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAgregarTurno"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Agregar"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/holo_green_dark"
                        app:icon="@drawable/ic_agregar"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"
                        android:layout_marginBottom="12dp"/>

                    <!-- Modificar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnModificarTurno"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Modificar"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/holo_orange_light"
                        app:icon="@drawable/ic_modificar"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"
                        android:layout_marginBottom="12dp"/>

                    <!-- Eliminar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEliminarTurno"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Eliminar"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/holo_red_dark"
                        app:icon="@drawable/ic_eliminar"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"
                        android:layout_marginBottom="12dp"/>

                    <!-- Volver -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVolverTurnos"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Volver"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@android:color/darker_gray"
                        app:icon="@drawable/ic_volver"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="32dp"
                        app:iconTint="@null"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
